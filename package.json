{
  "name": "industrial-ui",
  "version": "1.0.0",
  "description": "A lightweight modular UI Library built with TypeScript and Web Components",
  "license": "ISC",
  "author": "Alexandru Georgescu",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "web-components",
    "ui-library",
    "typescript",
    "components"
  ],
  "scripts": {
    "deploy": "npm run build && gh-pages -d dist",
    "dev": "tsup --watch && copy src/assets/logo.svg dist",
    "build": "tsup",
    "lint": "tsc --noEmit",
    "test": "vitest"
  },
  "devDependencies": {
    "esbuild-plugin-copy": "^2.1.1",
    "gh-pages": "^6.3.0",
    "happy-dom": "^20.5.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
